<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentVejce"
    android:padding="16dp"
    android:background="#FFFDF5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nadpis receptu -->
        <TextView
            android:id="@+id/tvTitleVejce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recept: Míchaná vajíčka se zeleninou"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Text receptu -->
        <TextView
            android:id="@+id/tvContentVejce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment_vejce"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginHorizontal="4dp" />

        <!-- Tip na závěr -->
        <TextView
            android:id="@+id/tvTipVejce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍳 Tip: Přidejte trochu pažitky a špetku chilli pro extra chuť!"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="#FFF8E1"
            android:layout_marginHorizontal="4dp" />

    </LinearLayout>
</ScrollView>
