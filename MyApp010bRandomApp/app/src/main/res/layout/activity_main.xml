<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvNazev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kámen, Nůžky, Papír:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKamen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kámen"
        android:layout_margin="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNazev" />

    <Button
        android:id="@+id/btnNuzky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nůžky"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnKamen"
        app:layout_constraintTop_toTopOf="@+id/btnKamen" />

    <Button
        android:id="@+id/btnPapir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papír"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnNuzky"
        app:layout_constraintTop_toTopOf="@+id/btnKamen" />



    <!-- Výsledek kola -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vyber možnost!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnKamen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Titulek skóre -->
    <TextView
        android:id="@+id/tvSkoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skóre:"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Skóre uživatele -->
    <TextView
        android:id="@+id/tvUserScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hráč: 0"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvSkoreTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp" />

    <!-- Skóre počítače -->
    <TextView
        android:id="@+id/tvComputerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Počítač: 0"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvSkoreTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp" />

    <!-- Tlačítko nová hra -->
    <Button
        android:id="@+id/btnNovaHra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nová hra"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
